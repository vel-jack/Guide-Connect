<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.hsv.connect.Login">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/signup_name"
        android:layout_alignStart="@+id/signup_name"
        android:text="Name:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_email"
        android:layout_alignStart="@+id/textView"
        android:layout_marginBottom="39dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_email"
        android:layout_below="@+id/imageView3"
        android:layout_marginTop="113dp"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="300dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:hint="name@mail.com"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_pass"
        android:layout_below="@+id/login_email"
        android:layout_marginTop="17dp"
        android:text="Password:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_email"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="#000000" />

    <Button
        android:id="@+id/register_domain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/sign_in"
        android:onClick="registerUser"
        android:text="Sign Up"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/lbutton_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/register_domain"
        android:layout_below="@+id/register_domain"
        android:layout_marginTop="14dp"
        android:background="@drawable/sign_up"
        android:text="Login"
        android:textSize="18sp"
        android:onClick="signUpToLogin"/>

</RelativeLayout>