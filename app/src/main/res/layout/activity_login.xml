<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.hsv.connect.register.SignUp"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        app:srcCompat="@drawable/logo" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="144dp"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/login_email"
        android:layout_width="300dp"
        android:textColor="#000000"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="36dp"
        android:ems="10"
        android:hint="name@mail.com"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_pass"
        android:layout_below="@+id/login_email"
        android:layout_marginTop="17dp"
        android:text="Password:"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:textColor="#000000"
        android:id="@+id/login_pass"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_email"
        android:layout_below="@+id/textView5"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/lbutton_signup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/lbutton_login"
        android:layout_below="@+id/lbutton_login"
        android:layout_marginTop="14dp"
        android:background="@drawable/sign_in"
        android:onClick="loginToSignUp"
        android:text="Sign Up"
        android:textSize="18sp" />

    <Button
        android:id="@+id/lbutton_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/login_pass"
        android:layout_marginStart="13dp"
        android:layout_marginTop="43dp"
        android:background="@drawable/sign_up"
        android:text="Login"
        android:onClick="doLogin"
        android:textSize="18sp" />

</RelativeLayout>
